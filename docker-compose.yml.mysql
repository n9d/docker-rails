version: '3'
services:
  api:
    build: .
    command: rails s -p 3000 -b '0.0.0.0'
    ports:
      - "3000:3000"
    depends_on:
      - db
    environment:
      - "DB_HOST=db"
      - "DB_PORT=3306"
      - "DB_USER=root"
      - "DB_PASSWORD=password"
    volumes:
      - .:/home/smith

  db:
    image: mysql:8
    ports:
      - "3306:3306"
    environment:
      - "MYSQL_USER=root"
      - "MYSQL_ROOT_PASSWORD=password"
    # volumes:
    #   - ./db/mysql/volumes:/var/lib/mysql
  
  